@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products Values";
}

<h1>Search & Inventory values</h1>

<p>
    <a class="btn btn-dark" asp-action="Products">Products</a>
</p>
<table class="table">
    <thead class="bg-dark bg-opacity-75 text-light text-uppercase">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
                <td>
                    <a class="btn-sm text-decoration-none btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn-sm text-decoration-none btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn-sm text-decoration-none btn-danger"
                        asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

